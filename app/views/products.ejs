<% include ./partials/header %>
    <div class="container">
        <h2 class="text-center">All Products</h2>

        <div class="my-2 text-center">
            <a href="products/new" class="btn btn-dark ">Add a New Product</a>
        </div>

        <div class="row">
            <% products.forEach(function(product){ %>
                <div class="card-deck col-md-4 col-sm-6  my-2 ml-2">
                    <div class="card ">

                        <img class="card-img-top img-responsive " src="<%=product.image%>" style="max-height: 400px; width: 100%" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=product.name%>
                            </h5>
                            <p class="card-text">
                                <%=product.description%>
                            </p>
                            <p class="card-text">
                                <b>&#8377;
                                    <%=product.price%></b>
                            </p>
                            <a href="products/<%=product._id%>" class="btn btn-primary my-1">View</a>
                            <a href="/addToCart/<%=product._id%>" class="btn btn-primary my-1">Add to Cart</a>



                        </div>
                    </div>
                </div>

                <% }) %>
        </div>

    </div>
    <% include ./partials/footer %>